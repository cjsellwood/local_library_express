<%- include("partials/top.ejs") %>
<title><%= title %></title>
<%- include("partials/sidebar.ejs") %>
<!--Content-->
<h1>Title: <%= title %></h1>
<p>
  <strong>Author: </strong
  ><a href="<%=book.author.url%>"><%=book.author.name%></a>
</p>
<p>
  <strong>Summary: </strong>
  <%= book.summary %>
</p>
<p>
  <strong>ISBN: </strong>
  <%= book.isbn %>
</p>
<p>
  <strong>Genre: </strong>
  <% for (let i = 0; i < book.genre.length; i++) { %>
  <a href="<%= book.genre[i].url %>"><%= book.genre[i].name %></a>
  <% if (i < book.genre.length - 1) {%>
  <span>,</span>
  <% } %> <%} %>
</p>
<div style="margin-left: 20px; margin-top: 20px">
  <h4>Copies</h4>
  <% for (book of bookInstances) { %>
  <hr />
  <% if ( book.status === "Available") {%>
  <p class="text-success"><%= book.status %></p>
  <% } else if (book.status === "Maintenance") {%>
  <p class="text-danger"><%= book.status %></p>
  <% } else { %>
  <p class="text-warning"><%= book.status %></p>
  <%} %>
  <p><strong>Imprint: </strong> <%= book.imprint %></p>
  <% if (book.status !== "Available") {%>
  <p><strong>Due back: </strong><%= book.dueBack %></p>
  <%} %> <% } %> <% if (bookInstances.length === 0) { %>
  <p>There are no copies of this book in the library</p>
  <% } %>
</div>

<%- include("partials/bottom.ejs") %>
