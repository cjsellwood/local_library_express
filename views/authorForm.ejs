<%- include("partials/top.ejs") %>
<title><%= title %></title>
<%- include("partials/sidebar.ejs") %>
<h1><%= title %></h1>
<form method="POST" action="">
  <div class="form-group">
    <label for="firstName">First Name:</label>
    <input id="firstName" class="form-control" placeholder="First Name"
    type="text" name="firstName" value="<%= undefined === locals.author ? "" :
    locals.author.firstName %>" required="true" />
    <label for="familyName">Family Name:</label>
    <input id="familyName" class="form-control" placeholder="Family Name"
    type="text" name="familyName" value="<%= undefined === locals.author ? "" :
    locals.author.familyName %>" required="true" />
  </div>
  <div class="form-group">
    <label for="dateOfBirth">Date of Birth:</label>
    <input id="dateOfBirth" class="form-control" type="date"
    placeholder="dd/mm/yyyy" name="dateOfBirth" value="<%= undefined ===
    locals.author ? "" : locals.author.dateOfBirthForm %>" required="true" />
    <label for="dateOfDeath">Date of Death:</label>
    <input id="dateOfDeath" class="form-control" type="date"
    placeholder="dd/mm/yyyy" name="dateOfDeath" value="<%= undefined ===
    locals.author ? "" : locals.author.dateOfDeathForm %>" required="true" />
  </div>
  <button class="btn btn-primary" style="margin-top: 20px" type="submit">
    Submit
  </button>
  <% if (locals.errors) { %>
  <ul>
    <% for (error of locals.errors) { %>
    <li><%= error.msg %></li>
    <% } %>
  </ul>
  <% } %>
</form>

<%- include("partials/bottom.ejs") %>
